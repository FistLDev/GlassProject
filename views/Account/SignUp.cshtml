@using System.Net.Http
@model GlassProject.models.view_models.SignUpViewModel
@{
    Layout = "_SignUpInFormLayout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="main" xmlns="http://www.w3.org/1999/html">
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <div asp-validation-summary="ModelOnly" id="myCustomSummary"></div>
                    <h2 class="form-title">Sign up</h2>
                    <form method="POST" class="register-form" asp-controller="Account" asp-action="SignUp">
                        <div class="form-group">
                            <label>
                                <i class="zmdi zmdi-account material-icons-name"></i>
                            </label>
                            <input asp-for="Name" placeholder="Name"/>
                            <span asp-validation-for="Name" style="color: red"></span>
                        </div>
                        <div class="form-group">
                            <label>
                                <i class="zmdi zmdi-email"></i>
                            </label>
                            <input asp-for="Email" placeholder="Email"/>
                            <span asp-validation-for="Email" style="color: red"></span>
                        </div>
                        <div class="form-group">
                            <label>
                                <i class="zmdi zmdi-lock"></i>
                            </label>
                            <input asp-for="Password" placeholder="Password"/>
                            <span asp-validation-for="Password" style="color: red"></span>
                        </div>
                        <div class="form-group">
                            <label>
                                <i class="zmdi zmdi-lock-outline"></i>
                            </label>
                            <input asp-for="RepeatPassword" placeholder="Repeat your password"/>
                            <span asp-validation-for="RepeatPassword" style="color: red"></span>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" value="Sign up" class="form-submit"/>
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure>
                        <img src="~/img/signup-image.jpg" alt="sing up image">
                    </figure>
                    <a href="@Url.Action("SignIn", "Account")" class="signup-image-link">I am already member</a>
                </div>
            </div>
        </div>
    </section>
</div>