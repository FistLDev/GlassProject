@model GlassProject.models.view_models.SignInViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_SignUpInFormLayout";
}

<div class="main">
    <section class="sign-in">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure>
                        <img src="~/img/signin-image.jpg" alt="sing up image">
                    </figure>
                    <a href="@Url.Action("SignUp", "Account")" class="signup-image-link">Create an account</a>
                </div>

                <div class="signin-form">
                    <div asp-validation-summary="ModelOnly" id="myCustomSummary"></div>
                    <h2 class="form-title">Sign in</h2>
                    <form method="POST" class="register-form" asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@Model.ReturnUrl">
                        <div class="form-group">
                            <label>
                                <i class="zmdi zmdi-account material-icons-name"></i>
                            </label>
                            <input asp-for="Name" placeholder="Name"/>
                        </div>
                        <div class="form-group">
                            <label >
                                <i class="zmdi zmdi-lock"></i>
                            </label>
                            <input asp-for="Password" placeholder="Password"/>
                        </div>
                        <div class="form-group">
                            <label for="remember-me" class="label-agree-term">
                                <span>
                                    <input type="checkbox" asp-for="RememberMe" class="agree-term"/>
                                </span>Remember
                                me
                            </label>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signin" id="signin" class="form-submit" value="Log in"/>
                        </div>
                    </form>
                    @*<div class="social-login">
                        <span class="social-label">Or login with</span>
                        <ul class="socials">
                            <li>
                                <a href="#">
                                    <i class="display-flex-center zmdi zmdi-facebook"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="display-flex-center zmdi zmdi-twitter"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="display-flex-center zmdi zmdi-google"></i>
                                </a>
                            </li>
                        </ul>
                    </div>*@
                </div>
            </div>
        </div>
    </section>
</div>