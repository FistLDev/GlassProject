@{
    Layout = "_PersonalAccountLayout";
}

<main class="col-md-9 col-lg-10 px-md-4 py-5">
    <div class="row">
        <select class="form-select col-md-4 mx-auto" id="project-type">
            <option selected>Type of the project</option>
            <option value="Site">Site</option>
            <option value="App">Desktop application</option>
        </select>
        <form class="col-md-4 mx-auto" id="site-project" style="display: none">
            <div style="margin: auto">

                <div class="col-12">
                    <label class="form-label">Project name</label>
                    <input type="text" class="form-control">
                </div>

                <div class="col-12">
                    <label class="form-label">Site structure <span class="text-muted">(Optional)</span></label>
                    <textarea type="text" class="form-control" rows="3"></textarea>
                </div>

                <div class="col-12">
                    <label class="form-label">Site description</label>
                    <textarea type="text" class="form-control" rows="3"></textarea>
                </div>

                <div class="col-12">
                    <label for="lastName" class="form-label">Site requirements</label>
                    <textarea type="text" class="form-control" rows="3"></textarea>
                </div>

                <div class="col-12">
                    <label for="lastName" class="form-label">Site purpose</label>
                    <textarea type="text" class="form-control" rows="3"></textarea>
                </div>

            </div>

            <hr class="my-4">

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="same-address">
                <label class="form-check-label" for="same-address">Shipping address is the same as my billing address</label>
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="save-info">
                <label class="form-check-label" for="save-info">Save this information for next time</label>
            </div>

            <hr class="my-4">

            <button class="w-100 btn btn-primary btn-lg" type="submit">Create order</button>
        </form>
    </div>
</main>

<script>
$(function (){
    $("#create-project").click(function (){
        $("#ts-type-modal").modal('show');
    });
});

$(document).ready(function(){
    $("#hide-modal").click(function(){
        $("#ts-type-modal").modal('hide');
    });
});

$(document).ready(function(){ 
  $('#project-type').change(function(){ 
    var val = $('#project-type :selected').val();
    
    switch (val){
        case 'Site' :
            $('#project-type').toggle();
            $('#site-project').toggle();
            break;
        case 'App' :
            alert('a');
            break;    
        }
  });
});

$(document).ready(function() {
  $("#@ViewBag.CurrentPage").css('background-color', '#FCA311')
})
</script>